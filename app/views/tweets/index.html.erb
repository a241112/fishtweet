<%= render "shared/header" %>
<div class='main'>

  <%# 釣果情報共有アプリ帯部分 %>
  <div class='title-contents'>
    <h2 class='service-title'>
      釣果情報共有アプリ
    </h2>
    <p class='service-explain'>
      Fishtweetはだれでもかんたんに投稿・閲覧できる
    </p>
    <p class='service-explain'>
      釣り情報アプリです
    </p>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='キーワードから探す'>
      <button class="search-button">
        <%= image_tag "search.ico", class:"search-icon" %>
      </button>
    </form>
  </div>
  <%# /釣果情報共有アプリ帯部分  %>

  <%# Fishtweetの特徴部分 %>
  <div class='select-reason-contents'>
    <h2 class='title'>
      Fishtweetの特徴
    </h2>
    <ul class='reason-lists'>
      <li class='list'>
        <h3 class='reason-list-text'>
          細かいデータが見れる
        </h3>
        <%# <%= image_tag "#", class:"list-pict" %> %>
        <p class='reason-list-description'>
          天候や餌、時間帯などを<br>投稿するので、どんな条件で<br>釣れたかが分かります
        </p>
      </li>
      <li class='list'>
        <h3 class='reason-list-text'>
          釣れた場所を地図で確認
        </h3>
        <%# <%= image_tag "#", class:"list-pict" %> %>
        <p class='reason-list-description'>
          実際に釣れた場所を地図上で<br>確認できます
        </p>
      </li>
      <li class='list'>
        <h3 class='reason-list-text'>
          気に入った投稿にいいね
        </h3>
        <%# <%= image_tag "#", class:"list-pict" %> %>
        <p class='reason-list-description'>
          気に入った投稿はいいねして<br>マイページからいつでも<br>確認できます
        </p>
      </li>
    </ul>
  </div>
  <%# /Fishtweetの特徴部分 %>

  

  <%# 釣果一覧 %>
  <div class='fish-contents'>
    <h2 class='title'>釣果一覧</h2>
    <ul class='fish-lists'>

      <%# 釣果のインスタンス変数になにか入っている場合、中身のすべてを展開できるようにしましょう %>
    <% @tweet.each do |tweet| %>
      <li class='list'>
          <%= link_to tweet_path(tweet) do %>
          <div class='fish-img-content'>
            <%= image_tag tweet.image, class: "fish-img" %>
          </div>
          <% end %>
        <div class='fish-info'>
          <div class="fish-time">
            <%= l tweet.datetime %>
          </div>
          <h3 class='fish-name'>
            <%= tweet.type_name %>
          </h3>
          <div class='fish-size'>
            <%= tweet.size_id %>cm
          </div>
          <div class='fish-address'>
            <%= tweet.address %>
          <% if user_signed_in? %>
            <div class='star-btn' id='like_<%= tweet.id %>'>
              <%= render partial: 'shared/like', locals: { tweet: tweet } %>
            </div>
          <% end %>
          </div>
        </div>
      </li>
      <%# //釣果のインスタンス変数になにか入っている場合、中身のすべてを展開できるようにしましょう %>
    <% end %>
    </ul>
  </div>
  <%# /釣果一覧 %>
</div>
<%= render "shared/footer" %>