<%= render "shared/second-header"%>

<div class="contents-row">
  <div class="container">
    <h2 class="form-header">
      新規登録
    </h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <div class="form-text">
          <%= f.label :ニックネーム %><br />
          <%= f.text_field :name, class:"input-default" %>
        </div>
      </div>
      <div class="form-group">
        <div class="form-text">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, class:"input-default", placeholder: "PC・携帯どちらでも可" %>
        </div>
      </div>
      <div class="form-group">
        <div class="form-text">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, class:"input-default", placeholder:"6文字以上の半角英数字" , autocomplete: "off" %>
          <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
        </div>
      </div>
      <div class="form-group">
        <div class="form-text">
          <%= f.label :確認用パスワード %><br />
          <%= f.password_field :password_confirmation, class:"input-default", placeholder:"同じパスワードを入力" , autocomplete: "off" %>
        </div>
      </div>
      <div class="form-group">
        <div class="form-text">
          <%= f.label :活動エリア %><br />
          <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"prefecture"}) %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "新規登録" , class:"login-btn" %>
      </div>

    <% end %>
  </div>
</div>

<%= render "shared/second-footer"%>