<%= render "shared/second-header"%>

<div class="contents-row">
  <div class="container">
    <h2 class="form-header">
      ログイン
    </h2>
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class='login-flash-message'>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>
      <div class="form-group">
        <div class="form-text">
          <%= f.label :メールアドレス %>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class:"input-default", autofocus: true %>
      </div>
      <div class="form-group">
        <div class="form-text">
          <%= f.label :パスワード %>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password, class:"input-default", autocomplete: "off" %>
      </div>
      <div class="actions">
        <%= f.submit "ログイン" ,class:"login-btn" %>
      </div>
    <% end %>
  </div>
</div>

<%= render "shared/second-footer"%>